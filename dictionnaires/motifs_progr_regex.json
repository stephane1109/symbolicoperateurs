{
  "name": "motifs_progr_regex",
  "description": "Motifs regex minimalistes pour détecter des structures de type programmation (condition, branchement, séquençage) dans un corpus en minuscules, une fois le texte déjà découpé en segments."
  },
  
  "patterns": [
    {
      "id": "if_then_same_sentence",
      "label": "si … alors",
      "category": "IF_THEN",
      "regex": "\\bsi\\b.*?\\balors\\b"
    },
    {
      "id": "if_and_optional_then_same_sentence",
      "label": "si … et … (alors)",
      "category": "IF_AND",
      "regex": "\\bsi\\b.*?\\bet\\b.*?(?:\\balors\\b)?"
    },
    {
      "id": "if_or_optional_then_same_sentence",
      "label": "si … ou … (alors)",
      "category": "IF_OR",
      "regex": "\\bsi\\b.*?\\bou\\b.*?(?:\\balors\\b)?"
    },
    {
      "id": "if_then_else_same_sentence",
      "label": "si … alors … sinon",
      "category": "IF_THEN_ELSE",
      "regex": "\\bsi\\b.*?\\balors\\b.*?\\bsinon\\b"
    },
    {
      "id": "procedure_dabord_puis_ensuite_same_sentence",
      "label": "d’abord … puis … (ensuite)",
      "category": "PROCEDURE",
      "regex": "\\bd[’']?\\s*abord\\b.*?\\bpuis\\b(?:.*?\\bensuite\\b)?"
    }
    {
      "id": "if_or_or_same_sentence",
      "label": "si … ou … ou",
      "category": "IF_OR_OR",
      "regex": "\\bsi\\b[^.!?;:\\n]*?\\bou\\b[^.!?;:\\n]*?\\bou\\b(?:\\s*\\bsi\\b)?[^.!?;:\\n]*?(?:\\balors\\b)?",
      "scope": "sentence",
      "notes": "Deux alternatives OU successives. La seconde peut être de la forme « ou si … ». « alors » reste optionnel."
    }
  ]
}
